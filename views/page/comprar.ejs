<%- include('../partials/head_pet.ejs') %>

  <body>
    <%- include('../partials/test.ejs') %>
    <br><br><br><br><br>
    <table class="table">
      <thead>
        <tr>
          <br>
          <th scope="col">id</th>
          <th scope="col">Nome do Livro</th>
          <th scope="col">Preço</th>
          <th scope="col">Data do Livro</th>
          <th scope="col">Descrição</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>

        <% Livros.forEach((livro)=> { %>
          <tr>
            <td>
              <%- livro.id %>
            </td>
            <td>
              <%- livro.nome_livro %>
            </td>
            <td>
              <%- livro.preco %>
            </td>
            <td>
              <%- livro.data_livro %>
            </td>
            <td>
              <%- livro.descricao %>
            </td>
            <td>
              <a href="/livro/edit/<%- livro.id %>"class = "btn btn-dark">Editar</a>
              <a href="/livro/compra/<%- livro.id %>"class = "btn btn-success">Comprar</a>
            </td>
          </tr>
          <% })%>
      </tbody>
    </table>
  </body>
